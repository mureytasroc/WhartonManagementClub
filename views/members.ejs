<title>Members</title>

<body>

    <% include global/header %>

    <div class="about-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="about-content about-content--2">

                        <h4>Members</h2>

                        <p style="padding-top:10px">Besides the hundreds of students on our mailing list, we have an exclusively selected group of <%= members.length %> committee members.  Meet them below!</p>

                      </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">

      <!-- Our Team starts -->


  <div class="row">

  <% if(locals.members){ %>

    <% for (var i=0; i < members.length; i++){ %>
      <% if(i%4==0 && i!= 0){ %> <!-- what if not 4 wide? -->
</div><br><div class="row">
        <% } %>
  <div class="col-xs-12 col-s-12 col-lg-3 col-xl-3 col-md-3" align="center">
    <div class="card pt-10">
      <img class="memberimage" src="<%- members[i].photo %>" alt="<%- members[i].name %>" height="200">
