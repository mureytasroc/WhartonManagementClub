        <p class="memberschoolyr"><%= members[i].gradclass %></p>
        <p><a href="/member/<%- members[i].name.toLowerCase().replace(/ /g,"") %>" class="memberbutton">More</a></p>
      </div>
    </div>
  </div>
  <% } %>
  <% } %>




